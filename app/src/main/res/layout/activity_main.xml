<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_getAuthors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authors ID"
        app:layout_constraintEnd_toStartOf="@+id/btn_getBooks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_getBooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Books"
        app:layout_constraintStart_toEndOf="@id/btn_getAuthors"
        app:layout_constraintEnd_toStartOf="@+id/btn_getAllDetails"
        app:layout_constraintTop_toTopOf="@+id/btn_getAuthors" />

    <Button
        android:id="@+id/btn_getAllDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_getBooks"
        app:layout_constraintTop_toTopOf="@+id/btn_getBooks" />

    <EditText
        android:id="@+id/et_dataInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Enter Details..."
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_getAuthors" />

    <ListView
        android:id="@+id/lv_details"
        android:layout_width="409dp"
        android:layout_height="628dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_dataInput" />
</androidx.constraintlayout.widget.ConstraintLayout>